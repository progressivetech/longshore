_longshore_complete() {
  local cur opts
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  prev="${COMP_WORDS[COMP_CWORD-1]}"
  commands="$(ls /srv/longshore/share/commands)"
  sites=$(ls /srv/longshore/services/sites 2>/dev/null)
  if [ "$prev" = "longshore" ]; then
    opts="$commands"
  elif [ "$prev" = "platform-create" ]; then
    # Standard completion (filename-completion)
    COMPREPLY=() 
    return
  elif [ "$prev" = "image-create" ]; then
    opts="my-jessie ptp-mysql ptp-php ptp-powerbase all"
  elif [[ "$commands" = *$prev* ]]; then
    opts="$sites"
  fi
    
  #echo "cur: $cur and prev: $prev"
  COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
  return 0
}

complete -o default -F _longshore_complete longshore

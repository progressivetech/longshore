#!/bin/bash

long_usage_message="usage: $(basename $0) site-start [<site>]
Start the given site container and all linked db containers.

Arguments
  <site> - The site to start. If left out, start all containers"

long_check_args "$2" "$#" 0

sites="$2"

if [ -z "$sites" ]; then
  me=$(hostname)
  long_set_sites "$me"
  sites="$LONG_SITES"
fi

for site in $sites; do
  long_container_up site "$site"
done

long_nginx_reload

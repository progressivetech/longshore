#!/bin/bash

long_usage_message="usage: $(basename $0) <type>
Create an image. 

Arguments
  <type> - The image type you want to create (ptp-mysql, ptp-nginx, etc.)" 

long_check_args "$2" "$#" 1

itype="$2"

# Create a mysql image.
if [ "$itype" = "ptp-mysql" ]; then
  docker build -t ptp-mysql ${LONG_ETC}/dockerfiles/ptp/mysql
elif [ "$itype" = "ptp-nginx" ]; then
  docker build -t ptp-nginx ${LONG_ETC}/dockerfiles/ptp/nginx
elif [ "$itype" = "ptp-php" ]; then
  docker build -t ptp-php ${LONG_ETC}/dockerfiles/ptp/php
else
  long_die "I don't know how to make an image of that type (%s)." 1 "$itype"
fi


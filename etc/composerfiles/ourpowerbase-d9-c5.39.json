{
    "name": "progressivetech/powerbase",
    "description": "Powerbase community organizing database",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://ourpowerbase.net/",
    "support": {
        "docs": "https://network.progressivetech.org"
    },
    "repositories": [
        {
          "type": "composer",
          "url": "https://packages.drupal.org/8"
        },
        {
          "type": "package",
          "url": "https://git.progressivetech.org/extensions/net.ourpowerbase.setup.git",
          "package": {
            "name": "progressivetech/setup",
            "version": "1",
            "type": "civicrm-extension",
            "source": {
              "url": "https://git.progressivetech.org/extensions/net.ourpowerbase.setup.git",
              "type": "git",
              "reference": "master"
            }
          }
        },
        {
          "type": "git",
          "url": "https://github.com/iATSPayments/com.iatspayments.civicrm.git",
          "package": {
            "type": "civicrm-extension"
          }
        }
    ],
    "require": {
        "civicrm/civicrm-asset-plugin": "~1.1",
        "civicrm/civicrm-core": "~5.39",
        "civicrm/civicrm-drupal-8": "~5.39",
        "civicrm/civicrm-packages": "~5.39",
        "composer/installers": "^1.9",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-project-message": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drush/drush": "^10.5",
        "progressivetech/setup": "~1",
        "iats-payments/civicrm": "master"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/extensions/{$name}": [
                "type:civicrm-extension"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "  Congrats!  ",
                "  Powerbase is installed </>"
            ]
        },
        "enable-patching": "true",
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"]
    },
    "scripts": {
      "post-update-cmd": "./extensions-installer"
    }
}
